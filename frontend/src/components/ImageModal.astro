<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center p-4">
  <div class="relative max-w-4xl max-h-full">
    <button id="closeModal" class="absolute -top-12 right-0 text-white text-2xl hover:text-gray-300">
      âœ•
    </button>
    <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain">
  </div>
</div>

<script>
  const modal = document.getElementById('imageModal');
  const modalImage = document.getElementById('modalImage');
  const closeBtn = document.getElementById('closeModal');
  
  // Open modal
  document.querySelectorAll('.gallery-image').forEach(img => {
    img.addEventListener('click', () => {
      modalImage.src = img.dataset.src || '';
      modalImage.alt = img.dataset.alt || '';
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    });
  });
  
  // Close modal
  closeBtn.addEventListener('click', () => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  });
  
  // Close on background click
  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
  });
  
  // Close on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
  });
</script>